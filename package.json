{
  "name": "just-formatter",
  "displayName": "just-formatter",
  "description": "A formatter plugin for justfiles",
  "version": "0.0.1",
  "publisher": "TobiasHochguertel",
  "author": {
    "name": "Tobias Hochg√ºrtel",
    "url": "https://github.com/tobiashochguertel"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "icon": "assets/icon.png",
  "keywords": [
    "formatter",
    "just",
    "justfile",
    "vscode"
  ],
  "repository": {
    "url": "https://gitea.hochguertel.work/vscode/just-formatter.git"
  },
  "activationEvents": [
    "onLanguage:just"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "just",
        "aliases": [
          "Justfile",
          "just"
        ],
        "extensions": [
          ".justfile",
          ".just"
        ]
      }
    ],
    "configurationDefaults": {
      "[just]": {
        "editor.defaultFormatter": "TobiasHochguertel.just-formatter"
      }
    }
  },
  "scripts": {
    "package": "pnpm run compile:production",
    "vscode:prepublish": "pnpm run package",
    "compile:dev": "pnpm run checks && node esbuild.js",
    "compile:production": "pnpm run checks && node esbuild.js --production",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "pretest": "del-cli ./out && pnpm run checks && pnpm run compile:dev",
    "checks": "npm-run-all -p checks:*",
    "checks:lint": "eslint src",
    "checks:check-types": "tsc --noEmit",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "del-cli": "^6.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  }
}
