{
  "scopeName": "source.just",
  "fileTypes": [ "justfile", "just" ],
  "patterns": [
    {
      "include": "#variables"
    },
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "variables": {
      "patterns": [
        {
          "name": "variable.other.just",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.just",
          "match": "\\b(?:alias|export|set|unset|if|else|for|in|do|done|while|let|function)\\b"
        }
      ]
    }
  }
}